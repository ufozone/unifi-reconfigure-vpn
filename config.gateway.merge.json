{
        "system": {
                "task-scheduler": {
                        "task": {
                                "postprovision": {
                                        "executable": {
                                                "path": "/config/scripts/post-config.d/vpn-site-to-site-reconfigure.sh"
                                        },
                                        "interval": "5m"
                                }
                        }
                }
        },
        "vpn": {
                "ipsec": {
                        "auto-firewall-nat-exclude": "enable",
                        "ipsec-interfaces": {
                                "interface": [
                                        "pppoe0"
                                ]
                        },
                        "nat-networks": {
                                "allowed-network": {
                                        "0.0.0.0/0": "''"
                                }
                        },
                        "nat-traversal": "enable"
                }
        }
}